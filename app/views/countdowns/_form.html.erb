<%= form_for @countdown, :html => {:multipart => true, :class => 'form'} do |f| %>
  <% if @countdown.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@countdown.errors.count, "error") %> prohibited this countdown from being saved:</h2>

      <ul>
      <% @countdown.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.datetime_select :time, order: [:day, :month, :year], :minute_step => 5, :class => 'dropdown-menu' %>
  </div>
  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="actions">
    <%= f.submit 'Start counting', :class => 'btn btn-success btn-lg' %>
  </div>
<% end %>
